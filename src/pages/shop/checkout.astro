---
import Base from '../../layouts/Base.astro';
import { Shield, Truck, CreditCard, ArrowLeft } from 'lucide-react';
---

<Base
  title="Checkout - Sing for Hope Shop"
  description="Complete your purchase and support arts programs in communities, schools, and healthcare settings."
>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white border-b">
      <div class="max-w-4xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
        <div class="flex items-center">
          <a href="/shop" class="inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors mr-8">
            <ArrowLeft className="w-4 h-4 mr-2" />
            Back to Shop
          </a>
          <h1 class="text-2xl font-bold text-gray-900">Secure Checkout</h1>
        </div>
      </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Checkout Form -->
        <div class="space-y-8">
          <!-- Contact Information -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-6">Contact Information</h2>
            
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address
                </label>
                <input
                  type="email"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                  placeholder="your@email.com"
                  required
                />
              </div>
              
              <div class="flex items-center">
                <input
                  type="checkbox"
                  id="newsletter"
                  class="h-4 w-4 text-harmony focus:ring-harmony border-gray-300 rounded"
                />
                <label for="newsletter" class="ml-2 text-sm text-gray-600">
                  Keep me updated about Sing for Hope news and programs
                </label>
              </div>
            </div>
          </div>

          <!-- Shipping Address -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-6">Shipping Address</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  First Name
                </label>
                <input
                  type="text"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                  required
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Last Name
                </label>
                <input
                  type="text"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                  required
                />
              </div>
              
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Address
                </label>
                <input
                  type="text"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                  placeholder="123 Main Street"
                  required
                />
              </div>
              
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Apartment, suite, etc. (optional)
                </label>
                <input
                  type="text"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                  placeholder="Apt 4B"
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  City
                </label>
                <input
                  type="text"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                  required
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  State / Province
                </label>
                <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony">
                  <option value="">Select state...</option>
                  <option value="AL">Alabama</option>
                  <option value="AK">Alaska</option>
                  <option value="AZ">Arizona</option>
                  <option value="AR">Arkansas</option>
                  <option value="CA">California</option>
                  <option value="NY">New York</option>
                  <!-- Add more states as needed -->
                </select>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  ZIP / Postal Code
                </label>
                <input
                  type="text"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                  required
                />
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Country
                </label>
                <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony">
                  <option value="US">United States</option>
                  <option value="CA">Canada</option>
                  <option value="MX">Mexico</option>
                  <!-- Add more countries as needed -->
                </select>
              </div>
            </div>
          </div>

          <!-- Shipping Method -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-6">Shipping Method</h2>
            
            <div class="space-y-4">
              <label class="flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50">
                <input
                  type="radio"
                  name="shipping"
                  value="standard"
                  class="h-4 w-4 text-harmony focus:ring-harmony border-gray-300"
                  checked
                />
                <div class="ml-4 flex-1 flex items-center justify-between">
                  <div>
                    <div class="font-medium text-gray-900">Standard Shipping</div>
                    <div class="text-sm text-gray-500">5-7 business days</div>
                  </div>
                  <div class="font-medium text-gray-900">Free</div>
                </div>
              </label>
              
              <label class="flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50">
                <input
                  type="radio"
                  name="shipping"
                  value="express"
                  class="h-4 w-4 text-harmony focus:ring-harmony border-gray-300"
                />
                <div class="ml-4 flex-1 flex items-center justify-between">
                  <div>
                    <div class="font-medium text-gray-900">Express Shipping</div>
                    <div class="text-sm text-gray-500">2-3 business days</div>
                  </div>
                  <div class="font-medium text-gray-900">$9.99</div>
                </div>
              </label>
              
              <label class="flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50">
                <input
                  type="radio"
                  name="shipping"
                  value="overnight"
                  class="h-4 w-4 text-harmony focus:ring-harmony border-gray-300"
                />
                <div class="ml-4 flex-1 flex items-center justify-between">
                  <div>
                    <div class="font-medium text-gray-900">Overnight Shipping</div>
                    <div class="text-sm text-gray-500">1 business day</div>
                  </div>
                  <div class="font-medium text-gray-900">$19.99</div>
                </div>
              </label>
            </div>
          </div>

          <!-- Payment Information -->
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-6">Payment Information</h2>
            
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Card Number
                </label>
                <div class="relative">
                  <input
                    type="text"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony pl-12"
                    placeholder="1234 5678 9012 3456"
                    required
                  />
                  <CreditCard className="w-5 h-5 text-gray-400 absolute left-4 top-4" />
                </div>
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Expiry Date
                  </label>
                  <input
                    type="text"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                    placeholder="MM/YY"
                    required
                  />
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    CVV
                  </label>
                  <input
                    type="text"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                    placeholder="123"
                    required
                  />
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Name on Card
                </label>
                <input
                  type="text"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-harmony focus:border-harmony"
                  required
                />
              </div>
              
              <div class="flex items-center">
                <input
                  type="checkbox"
                  id="billing-same"
                  class="h-4 w-4 text-harmony focus:ring-harmony border-gray-300 rounded"
                  checked
                />
                <label for="billing-same" class="ml-2 text-sm text-gray-600">
                  Billing address same as shipping
                </label>
              </div>
            </div>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="lg:sticky lg:top-8">
          <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-6">Order Summary</h2>
            
            <!-- Cart Items -->
            <div class="space-y-4 mb-6">
              <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-gray-100 rounded-lg overflow-hidden">
                  <img
                    src="/src/images/singforhope.jpg"
                    alt="Sing for Hope T-Shirt"
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="flex-1">
                  <h3 class="font-medium text-gray-900">Classic Logo T-Shirt</h3>
                  <p class="text-sm text-gray-500">Size: M, Color: Black</p>
                  <p class="text-sm text-gray-500">Qty: 1</p>
                </div>
                <div class="font-medium text-gray-900">$25.00</div>
              </div>
              
              <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-gray-100 rounded-lg overflow-hidden">
                  <img
                    src="/src/images/pianos-stock-1.png"
                    alt="Piano Art Tote"
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="flex-1">
                  <h3 class="font-medium text-gray-900">Piano Art Tote Bag</h3>
                  <p class="text-sm text-gray-500">One Size</p>
                  <p class="text-sm text-gray-500">Qty: 1</p>
                </div>
                <div class="font-medium text-gray-900">$18.00</div>
              </div>
            </div>

            <!-- Order Totals -->
            <div class="border-t pt-6 space-y-3">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Subtotal</span>
                <span class="text-gray-900">$43.00</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Shipping</span>
                <span class="text-gray-900">Free</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Tax</span>
                <span class="text-gray-900">$3.44</span>
              </div>
              <div class="flex justify-between text-base font-semibold pt-3 border-t">
                <span class="text-gray-900">Total</span>
                <span class="text-gray-900">$46.44</span>
              </div>
            </div>

            <!-- Complete Order Button -->
            <button class="w-full btn-harmony mt-6 py-4 text-lg">
              <Shield className="w-5 h-5 mr-2" />
              Complete Order
            </button>

            <!-- Security Notice -->
            <div class="mt-6 text-center text-xs text-gray-500">
              <div class="flex items-center justify-center mb-2">
                <Shield className="w-4 h-4 mr-1" />
                <span>Secure SSL Encryption</span>
              </div>
              <p>Your payment information is encrypted and secure</p>
            </div>
          </div>

          <!-- Impact Statement -->
          <div class="bg-gradient-to-r from-harmony/10 to-melody/10 rounded-xl p-6 mt-6">
            <h3 class="font-semibold text-gray-900 mb-3">Your Impact</h3>
            <div class="space-y-2 text-sm text-gray-600">
              <div class="flex items-center">
                <span class="w-2 h-2 bg-harmony rounded-full mr-3"></span>
                <span>75% of proceeds fund arts programs</span>
              </div>
              <div class="flex items-center">
                <span class="w-2 h-2 bg-melody rounded-full mr-3"></span>
                <span>Supporting 500+ community partnerships</span>
              </div>
              <div class="flex items-center">
                <span class="w-2 h-2 bg-rhythm rounded-full mr-3"></span>
                <span>Creating hope through the arts</span>
              </div>
            </div>
          </div>

          <!-- Shipping Features -->
          <div class="mt-6 space-y-3 text-sm text-gray-600">
            <div class="flex items-center">
              <Truck className="w-4 h-4 mr-3 text-green-600" />
              <span>Free shipping on orders over $50</span>
            </div>
            <div class="flex items-center">
              <Shield className="w-4 h-4 mr-3 text-blue-600" />
              <span>30-day return policy</span>
            </div>
            <div class="flex items-center">
              <CreditCard className="w-4 h-4 mr-3 text-harmony" />
              <span>Secure payment processing</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Base>

<script>
  // Form validation and submission
  const form = document.querySelector('form');
  const completeOrderBtn = document.querySelector('button[type="submit"]');
  
  if (completeOrderBtn) {
    completeOrderBtn.addEventListener('click', async (e) => {
      e.preventDefault();
      
      // Basic form validation
      const requiredFields = document.querySelectorAll('input[required]');
      let isValid = true;
      
      requiredFields.forEach(field => {
        if (!field.value.trim()) {
          field.classList.add('border-red-500');
          isValid = false;
        } else {
          field.classList.remove('border-red-500');
        }
      });
      
      if (!isValid) {
        alert('Please fill in all required fields.');
        return;
      }
      
      // Simulate payment processing
      completeOrderBtn.disabled = true;
      completeOrderBtn.innerHTML = '<div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin mr-2"></div>Processing...';
      
      try {
        // In production, this would integrate with Stripe
        await new Promise(resolve => setTimeout(resolve, 2000));
        
        // Redirect to success page
        window.location.href = '/shop/success';
      } catch (error) {
        alert('Payment failed. Please try again.');
        completeOrderBtn.disabled = false;
        completeOrderBtn.innerHTML = '<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>Complete Order';
      }
    });
  }

  // Update shipping cost when method changes
  const shippingRadios = document.querySelectorAll('input[name="shipping"]');
  shippingRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      const shippingCost = {
        'standard': 0,
        'express': 9.99,
        'overnight': 19.99
      };
      
      const cost = shippingCost[e.target.value] || 0;
      const shippingElement = document.querySelector('[data-shipping-cost]');
      const totalElement = document.querySelector('[data-total]');
      
      if (shippingElement && totalElement) {
        const subtotal = 43.00;
        const tax = 3.44;
        const total = subtotal + cost + tax;
        
        shippingElement.textContent = cost === 0 ? 'Free' : `$${cost.toFixed(2)}`;
        totalElement.textContent = `$${total.toFixed(2)}`;
      }
    });
  });
</script>