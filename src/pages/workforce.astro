---
import Base from '../layouts/Base.astro';
---

<Base
  title="Creative Workforce Development - Sing for Hope"
  description="Sing for Hope's Creative Workforce Development program reframes the value proposition of the arts with innovative public-private partnerships that extend our creative industry beyond traditional models."
>
  <div class="bg-white">
    <!-- Modern Hero Section -->
    <div class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <!-- Animated background -->
      <div class="absolute inset-0 bg-gradient-to-br from-symphony via-symphony/95 to-symphony/80">
        <!-- Background pattern removed (asset not present in deployment) -->
      </div>
      
      <!-- Floating elements -->
      <div class="absolute top-20 left-10 w-72 h-72 bg-white/5 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-white/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center">
        <!-- Badge -->
        <div class="inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 mb-8">
          <svg class="w-5 h-5 text-white mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span class="text-white font-medium">Empowering Creative Communities</span>
        </div>
        
        <!-- Main heading -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-white mb-8 leading-tight">
          Creative
          <span class="block bg-gradient-to-r from-gray-200 to-white bg-clip-text text-transparent">
            Workforce
          </span>
          <span class="block text-4xl sm:text-5xl lg:text-6xl font-normal">
            Development
          </span>
        </h1>
        
        <p class="text-xl sm:text-2xl text-gray-200 max-w-4xl mx-auto mb-12 leading-relaxed">
          Reframing the value of the arts through innovative public-private partnerships, supporting artists as creative placemakers who build happier, healthier communities worldwide.
        </p>
        
        <!-- Interactive stats -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-4xl mx-auto mb-12">
          <div class="group bg-white/10 backdrop-blur-sm rounded-3xl p-8 hover:bg-white/20 transition-all duration-300 hover:scale-105">
            <div class="text-3xl font-bold text-white mb-2 group-hover:scale-110 transition-transform">System-Wide</div>
            <div class="text-gray-200 text-sm">Community Impact</div>
          </div>
          <div class="group bg-white/10 backdrop-blur-sm rounded-3xl p-8 hover:bg-white/20 transition-all duration-300 hover:scale-105">
            <div class="text-3xl font-bold text-white mb-2 group-hover:scale-110 transition-transform">Global</div>
            <div class="text-gray-200 text-sm">Local Partnership</div>
          </div>
          <div class="group bg-white/10 backdrop-blur-sm rounded-3xl p-8 hover:bg-white/20 transition-all duration-300 hover:scale-105">
            <div class="text-3xl font-bold text-white mb-2 group-hover:scale-110 transition-transform">Multi-Sector</div>
            <div class="text-gray-200 text-sm">Stakeholder Benefits</div>
          </div>
        </div>
        
        <!-- CTA buttons -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center max-w-lg mx-auto">
          <button
            type="button"
            id="workforce-hero-donate-button"
            class="group bg-white text-symphony px-8 py-4 rounded-2xl font-semibold hover:bg-gray-50 transition-all duration-300 hover:scale-105 shadow-2xl"
          >
            <span class="flex items-center justify-center">
              Support Our Mission
              <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </button>
          
          <a
            href="/contact"
            class="group bg-white/10 backdrop-blur-sm border border-white/20 text-white px-8 py-4 rounded-2xl font-semibold hover:bg-white/20 transition-all duration-300 hover:scale-105"
          >
            <span class="flex items-center justify-center">
              Learn More
              <svg class="ml-2 w-5 h-5 group-hover:rotate-45 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </span>
          </a>
        </div>
      </div>
    </div>

    <!-- Impact Areas -->
    <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Signature "Power Source"</h2>
          <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
            Creative Workforce Development courses through all of our programming, developing and directing cultural workers to build happier, healthier communities locally and globally.
          </p>
        </div>
        
        <!-- Impact cards grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
          <div class="group bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-symphony to-symphony/80 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 text-center mb-3">Connection</h3>
            <p class="text-gray-600 text-center text-sm">Building bridges between communities through shared creative experiences</p>
          </div>
          
          <div class="group bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-harmony to-harmonydark rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 text-center mb-3">Wellbeing</h3>
            <p class="text-gray-600 text-center text-sm">Promoting mental health and social wellness through artistic engagement</p>
          </div>
          
          <div class="group bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-melody to-melodydark rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 text-center mb-3">Safety</h3>
            <p class="text-gray-600 text-center text-sm">Creating safe spaces for expression and community gathering</p>
          </div>
          
          <div class="group bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-rhythm to-rhythmdark rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 text-center mb-3">Economic Growth</h3>
            <p class="text-gray-600 text-center text-sm">Driving sustainable economic development through creative industries</p>
          </div>
        </div>
        
        <!-- Detailed description -->
        <div class="bg-white rounded-3xl p-8 lg:p-12 shadow-xl">
          <div class="max-w-4xl mx-auto text-center">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Innovative Public-Private Partnerships</h3>
            <p class="text-lg text-gray-700 leading-relaxed mb-8">
              Our Creative Workforce Development program reframes the value proposition of the arts through groundbreaking partnerships that extend our creative industry beyond traditional models. We support artists as creative placemakers in their communities, working with both individuals and groups to deliver measurable benefits to multiple stakeholders.
            </p>
            
            <!-- Key benefits -->
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-symphony rounded-full"></div>
                <span class="text-gray-700">System-wide community impact</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-harmony rounded-full"></div>
                <span class="text-gray-700">Artist employment opportunities</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-melody rounded-full"></div>
                <span class="text-gray-700">Cultural worker development</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-rhythm rounded-full"></div>
                <span class="text-gray-700">Cross-sector collaboration</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-sonata rounded-full"></div>
                <span class="text-gray-700">Sustainable funding models</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-symphony rounded-full"></div>
                <span class="text-gray-700">Global-local integration</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Artist Impact Stories -->
    <section class="py-20 bg-gradient-to-br from-gray-900 to-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-white mb-4">Artist Voices</h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Hear from the artists and cultural workers whose lives and careers have been transformed through our workforce development initiatives.
          </p>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="space-y-8">
            <!-- Main testimonial -->
            <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-8 border border-white/20">
              <div class="flex items-start space-x-4 mb-6">
                <div class="w-12 h-12 bg-gradient-to-br from-resonance to-resonancedark rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-white font-bold text-lg">L</span>
                </div>
                <div>
                  <div class="font-semibold text-white">Ljova</div>
                  <div class="text-gray-300 text-sm">Professional Musician & Cultural Worker</div>
                </div>
              </div>
              <blockquote class="text-lg text-gray-200 leading-relaxed italic">
                "I cannot overstate the emotional impact these performances have had, first during the height of the pandemic and now with the raging war between the country of my birth (Russia) and the country of my ancestors (Ukraine), and how it's helped us all cope and bond emotionally. For these two hours we hold on to each other and nothing more needs to be said."
              </blockquote>
            </div>
            
            <!-- Impact metrics -->
            <div class="grid grid-cols-2 gap-6">
              <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 text-center border border-white/10">
                <div class="text-2xl font-bold text-white mb-1">Pandemic Era</div>
                <div class="text-gray-300 text-sm">Leading Freelance Employer</div>
              </div>
              <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 text-center border border-white/10">
                <div class="text-2xl font-bold text-white mb-1">Global Reach</div>
                <div class="text-gray-300 text-sm">Artists Worldwide</div>
              </div>
            </div>
          </div>
          
          <!-- Visual element -->
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-symphony/30 to-resonance/20 rounded-3xl transform rotate-6"></div>
            <div class="relative bg-white/10 backdrop-blur-sm rounded-3xl p-8 border border-white/20">
              <h3 class="text-2xl font-bold text-white mb-6">Program Highlights</h3>
              <div class="space-y-4">
                <div class="flex items-center space-x-3">
                  <div class="w-3 h-3 bg-symphony rounded-full"></div>
                  <span class="text-gray-200 text-sm">Innovative Funding Models</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-3 h-3 bg-resonance rounded-full"></div>
                  <span class="text-gray-200 text-sm">Artist Employment Security</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-3 h-3 bg-harmony rounded-full"></div>
                  <span class="text-gray-200 text-sm">Community Integration</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-3 h-3 bg-melody rounded-full"></div>
                  <span class="text-gray-200 text-sm">Creative Placemaking</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-3 h-3 bg-rhythm rounded-full"></div>
                  <span class="text-gray-200 text-sm">Cross-Cultural Collaboration</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 bg-gradient-to-br from-symphony via-symphony to-symphony/90 relative overflow-hidden">
      <!-- Background elements -->
      <!-- Background pattern removed (asset not present in deployment) -->
      <div class="absolute top-20 right-20 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 left-20 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <!-- Badge -->
          <div class="inline-flex items-center px-6 py-3 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 mb-8">
            <svg class="w-5 h-5 text-white mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span class="text-white font-medium">Join Our Movement</span>
          </div>
          
          <h2 class="text-4xl sm:text-5xl font-bold text-white mb-6">
            Support Creative
            <span class="block bg-gradient-to-r from-gray-200 to-white bg-clip-text text-transparent">
              Workforce Development
            </span>
          </h2>
          
          <p class="text-xl text-gray-200 mb-12 max-w-4xl mx-auto leading-relaxed">
            Help us continue supporting artists as creative placemakers in their communities, building happier and healthier communities worldwide through innovative partnerships and sustainable employment models.
          </p>
          
          <!-- Action buttons -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center max-w-lg mx-auto mb-12">
            <button
              type="button"
              id="workforce-donate-button"
              class="group bg-white text-symphony px-10 py-5 rounded-2xl font-semibold hover:bg-gray-50 transition-all duration-300 hover:scale-105 shadow-2xl"
            >
              <span class="flex items-center justify-center">
                Support Our Mission
                <svg class="ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </button>
            
            <a
              href="/contact"
              class="group bg-white/10 backdrop-blur-sm border border-white/20 text-white px-10 py-5 rounded-2xl font-semibold hover:bg-white/20 transition-all duration-300 hover:scale-105"
            >
              <span class="flex items-center justify-center">
                Partner with Us
                <svg class="ml-3 w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          </div>
          
          <!-- Social proof -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 max-w-2xl mx-auto">
            <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 text-center">
              <div class="text-lg font-semibold text-white mb-1">Pandemic Response</div>
              <div class="text-gray-300 text-sm">Leading Freelance Employer</div>
            </div>
            <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 text-center">
              <div class="text-lg font-semibold text-white mb-1">System Change</div>
              <div class="text-gray-300 text-sm">Artist Employment Model</div>
            </div>
            <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 text-center">
              <div class="text-lg font-semibold text-white mb-1">Global Impact</div>
              <div class="text-gray-300 text-sm">Community Transformation</div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Base>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const workforceHeroDonateButton = document.getElementById('workforce-hero-donate-button');
    const workforceDonateButton = document.getElementById('workforce-donate-button');
    
    const handleDonateClick = function(e: Event) {
      e.preventDefault();
      
      try {
        if (window.Funraise) {
          window.Funraise.popup();
        } else {
          window.location.href = '/donate';
        }
      } catch (error) {
        console.warn('Funraise popup failed, redirecting to fallback', error);
        window.location.href = '/donate';
      }
    };
    
    if (workforceHeroDonateButton) {
      workforceHeroDonateButton.addEventListener('click', handleDonateClick);
    }
    
    if (workforceDonateButton) {
      workforceDonateButton.addEventListener('click', handleDonateClick);
    }
    
    // Add scroll-triggered animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-in-up');
        }
      });
    }, observerOptions);
    
    // Observe elements for animation
    document.querySelectorAll('.group').forEach(el => {
      observer.observe(el);
    });
  });
</script>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
  }
</style>
