---
import Base from '../layouts/Base.astro';
import PianoDiscovery from '../components/PianoDiscovery.tsx';
---

<Base
  title="Discover Pianos - Sing for Hope"
  description="Discover Sing for Hope Pianos near you. Explore our interactive map and gallery of artist-designed pianos placed in public spaces and healthcare facilities worldwide."
>
  <div class="min-h-screen bg-gray-50 flex flex-col">
    <!-- Hero Section -->
    <div class="bg-white border-b border-gray-200 flex-shrink-0">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl">
            Discover Pianos
          </h1>
          <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
            Find artist-designed pianos in public spaces near you. Each piano is a unique work of art, 
            available for anyone to play and enjoy.
          </p>
        </div>
      </div>
    </div>

    <!-- Piano Discovery App -->
    <div class="flex-1 flex flex-col">
      <PianoDiscovery client:load />
    </div>
  </div>
</Base>

<style>
  /* Ensure the discovery app takes full height */
  .min-h-screen {
    min-height: 100vh;
  }
</style>