---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Map Test</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <style>
    body { margin: 0; padding: 20px; }
    #map { 
      height: 400px; 
      width: 100%; 
      border: 2px solid red; 
      background: yellow;
    }
  </style>
</head>
<body>
  <h1>Simple Map Test - Using Leaflet</h1>
  <div id="map"></div>
  
  <script>
    try {
      console.log('Initializing Leaflet map...');
      
      const map = L.map('map').setView([40.7128, -74.006], 11);
      
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Â© OpenStreetMap contributors'
      }).addTo(map);
      
      // Add a test marker
      L.marker([40.7128, -74.006]).addTo(map)
        .bindPopup('NYC - Test marker')
        .openPopup();
      
      console.log('Map loaded successfully!');
      document.body.style.backgroundColor = 'lightgreen';
      
    } catch(e) {
      console.error('Map error:', e);
      document.body.style.backgroundColor = 'lightcoral';
      document.getElementById('map').innerHTML = '<h2>Map failed to load: ' + e.message + '</h2>';
    }
  </script>
</body>
</html>