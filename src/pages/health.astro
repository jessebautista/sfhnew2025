<script>
  document.addEventListener('DOMContentLoaded', function() {
    const healthHeroDonateButton = document.getElementById('health-hero-donate-button');
    const healthCtaDonateButton = document.getElementById('health-cta-donate-button');
    const healthVideoButton = document.getElementById('health-video-button');
    
    const handleDonateClick = function(e: Event) {
      e.preventDefault();
      
      try {
        if (window.Funraise) {
          window.Funraise.popup();
        } else {
          window.location.href = '/donate';
        }
      } catch (error) {
        console.warn('Funraise popup failed, redirecting to fallback', error);
        window.location.href = '/donate';
      }
    };
    
    if (healthHeroDonateButton) {
      healthHeroDonateButton.addEventListener('click', handleDonateClick);
    }
    
    if (healthCtaDonateButton) {
      healthCtaDonateButton.addEventListener('click', handleDonateClick);
    }
    
    if (healthVideoButton) {
      healthVideoButton.addEventListener('click', function() {
        const video = document.getElementById('myVideo') as HTMLVideoElement;
        if (video) {
          video.scrollIntoView({ behavior: 'smooth' });
          setTimeout(() => video.play(), 500);
        }
      });
    }
    
    // Modern Accordion Functionality
    const accordionTriggers = document.querySelectorAll('.accordion-trigger');
    
    accordionTriggers.forEach(trigger => {
      trigger.addEventListener('click', function(this: HTMLElement) {
        const targetId = this.getAttribute('data-target');
        const content = document.getElementById(targetId!);
        const icon = this.querySelector('.accordion-icon') as HTMLElement;
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        
        // Close all other accordions
        accordionTriggers.forEach(otherTrigger => {
          if (otherTrigger !== trigger) {
            const otherTargetId = (otherTrigger as HTMLElement).getAttribute('data-target');
            const otherContent = document.getElementById(otherTargetId!);
            const otherIcon = (otherTrigger as HTMLElement).querySelector('.accordion-icon') as HTMLElement;
            
            (otherTrigger as HTMLElement).setAttribute('aria-expanded', 'false');
            if (otherContent) {
              otherContent.classList.add('hidden');
            }
            if (otherIcon) {
              otherIcon.style.transform = 'rotate(0deg)';
            }
          }
        });
        
        // Toggle current accordion
        if (!isExpanded) {
          this.setAttribute('aria-expanded', 'true');
          if (content) {
            content.classList.remove('hidden');
            // Smooth scroll to accordion after expansion
            setTimeout(() => {
              this.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 100);
          }
          if (icon) {
            icon.style.transform = 'rotate(180deg)';
          }
        } else {
          this.setAttribute('aria-expanded', 'false');
          if (content) {
            content.classList.add('hidden');
          }
          if (icon) {
            icon.style.transform = 'rotate(0deg)';
          }
        }
      });
    });
  });
</script>