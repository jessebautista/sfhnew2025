---
import Base from '../../layouts/Base.astro';
import { supabase } from '../../lib/supabase';
import { sanitizeHtml, sanitizeForTitle } from '../../lib/security';

async function fetchNewsItem(news_url: string) {
  console.log('Querying for news_url:', news_url);
  
  const { data: newsItem, error } = await supabase
    .from('news')
    .select('*')
    .eq('news_url', news_url)
    .single();

  if (error) {
    console.error('Error fetching news item:', error);
    console.error('Error details:', error.message, error.code);
    return null;
  }

  console.log('Successfully fetched news item:', newsItem?.news_title);
  return newsItem;
}

// Get the news URL from params
const news_url = Astro.params.news_url;
console.log('Looking for news_url:', news_url);

const newsItem = await fetchNewsItem(news_url || '');
console.log('Found newsItem:', newsItem ? 'YES' : 'NO');

// Return 404 if news item not found
if (!newsItem) {
  console.log('News item not found, redirecting to 404');
  return Astro.redirect('/404');
}

// Fetch related news
async function fetchRelatedNews(currentId: number) {
  const { data: relatedNews, error } = await supabase
    .from('news')
    .select('*')
    .neq('id', currentId)
    .order('news_date', { ascending: false })
    .limit(3);

  if (error) {
    console.error('Error fetching related news:', error);
    return [];
  }

  return relatedNews || [];
}

const relatedNews = await fetchRelatedNews(newsItem.id);

// Format date
const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Base 
  title={`${newsItem.news_title} - Sing for Hope News`}
  description={newsItem.news_content ? String(newsItem.news_content).substring(0, 160) : 'Read the latest news from Sing for Hope'}
>
  <div class="bg-white min-h-screen">
    <!-- Hero Section -->
    <div class="relative bg-gradient-to-br from-rhythm via-rhythm/90 to-rhythmdark">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-white">
          <div class="mb-4">
            <a href="/news" class="inline-flex items-center text-white/80 hover:text-white transition-colors">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back to News
            </a>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            {sanitizeForTitle(newsItem.news_title)}
          </h1>
          <div class="flex items-center gap-4 text-lg opacity-90">
            <span>{formatDate(newsItem.news_date)}</span>
            {newsItem.news_author && (
              <>
                <span>â€¢</span>
                <span>By {newsItem.news_author}</span>
              </>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <article class="prose prose-lg max-w-none">
        {newsItem.news_image && (
          <div class="mb-8">
            <img 
              src={newsItem.news_image} 
              alt={sanitizeForTitle(newsItem.news_title)}
              class="w-full rounded-2xl shadow-lg"
              onerror="this.onerror=null; this.src='/singforhope.jpg';"
            />
            {newsItem.news_image_caption && (
              <div class="mt-3 ml-1 flex gap-x-2 text-sm leading-6 text-gray-600">
                <svg
                  class="mt-0.5 h-5 w-5 flex-none text-gray-300"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span>{newsItem.news_image_caption}</span>
              </div>
            )}
          </div>
        )}
        
        <div class="bg-white prose prose-lg max-w-none">
          {newsItem.tiny ? (
            <div set:html={newsItem.tiny} />
          ) : newsItem.news_content ? (
            typeof newsItem.news_content === 'string' ? (
              <div class="text-gray-700 leading-relaxed whitespace-pre-wrap" set:html={sanitizeHtml(newsItem.news_content)} />
            ) : (
              <div class="text-gray-700 leading-relaxed">
                <p>Content formatting issue - please contact support.</p>
              </div>
            )
          ) : (
            <div class="text-gray-700 leading-relaxed">
              <p>No content available for this article.</p>
            </div>
          )}
        </div>

        {newsItem.news_link && (
          <div class="mt-8 p-6 bg-gray-50 rounded-xl border border-gray-200">
            <p class="text-sm text-gray-600 mb-2">Read more:</p>
            <a 
              href={newsItem.news_link} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-rhythm hover:text-rhythmdark font-medium inline-flex items-center"
            >
              {newsItem.news_link}
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        )}
      </article>

      <!-- Script execution for embedded content -->
      <script>
        // Wait for content to load then execute any scripts
        setTimeout(() => {
          const scriptTags = document.querySelectorAll('div[set\\:html] script');
          console.log('Script tags found:', scriptTags.length);
          scriptTags.forEach((script) => {
            console.log('Executing script:', script.src);
            const newScript = document.createElement('script');
            if (script.src) {
              newScript.src = script.src;
              newScript.defer = true;
              document.body.appendChild(newScript);
            } else if (script.innerHTML) {
              newScript.innerHTML = script.innerHTML;
              document.body.appendChild(newScript);
            }
          });
        }, 100);
      </script>

      <!-- Share Section -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Share this article</h3>
        <div class="flex gap-4">
          <a 
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(newsItem.news_title)}&url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-lg transition-colors"
          >
            Twitter
          </a>
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-lg transition-colors"
          >
            Facebook
          </a>
          <a 
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-lg transition-colors"
          >
            LinkedIn
          </a>
        </div>
      </div>

      <!-- Related News -->
      {relatedNews.length > 0 && (
        <div class="mt-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-8">Related News</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {relatedNews.map((article: any) => (
              <a 
                href={`/news/${article.news_url}`}
                class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-200 overflow-hidden"
              >
                {article.news_image && (
                  <div class="aspect-w-16 aspect-h-9 overflow-hidden">
                    <img 
                      src={article.news_image} 
                      alt={sanitizeForTitle(article.news_title)}
                      class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-200"
                      onerror="this.onerror=null; this.src='/singforhope.jpg';"
                    />
                  </div>
                )}
                <div class="p-4">
                  <p class="text-sm text-gray-500 mb-2">{formatDate(article.news_date)}</p>
                  <h3 class="font-semibold text-gray-900 group-hover:text-rhythm transition-colors line-clamp-2">
                    {sanitizeForTitle(article.news_title)}
                  </h3>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</Base>