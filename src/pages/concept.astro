  <style>
    .concept-container {
      transition: background 1s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .program-content {
      display: none;
    }

    .program-content.active {
      display: block;
    }

    .program-item {
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Hover states for program items */
    .program-item:hover h2 {
      color: white !important;
    }

    .program-item:hover p {
      color: rgba(255, 255, 255, 0.8) !important;
    }

    .program-item:hover {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    /* Show decorative elements when content is visible */
    .concept-container.has-content .decorative-element {
      opacity: 1;
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const programItems = document.querySelectorAll('.program-item');
      const contentPanel = document.getElementById('content-panel');
      const programContents = document.querySelectorAll('.program-content');
      const container = document.querySelector('.concept-container');
      const mobileContent = document.getElementById('mobile-content');
      const mobileContentArea = document.getElementById('mobile-content-area');
      const mobileClose = document.getElementById('mobile-close');

      // Helper function to create gradient from program color
      function createGradient(color, direction = '135deg') {
        // Convert hex to RGB for manipulation
        const hex = color.replace('#', '');
        const r = parseInt(hex.substr(0, 2), 16);
        const g = parseInt(hex.substr(2, 2), 16);
        const b = parseInt(hex.substr(4, 2), 16);
        
        // Create a lighter version for gradient
        const lighten = (val) => Math.min(255, val + 30);
        const darken = (val) => Math.max(0, val - 20);
        
        const lightColor = `rgb(${lighten(r)}, ${lighten(g)}, ${lighten(b)})`;
        const darkColor = `rgb(${darken(r)}, ${darken(g)}, ${darken(b)})`;
        
        return `linear-gradient(${direction}, ${color} 0%, ${lightColor} 50%, ${darkColor} 100%)`;
      }

      // Desktop hover interactions
      programItems.forEach(item => {
        item.addEventListener('mouseenter', function() {
          const programId = this.dataset.program;
          const programColor = this.dataset.color;
          
          // Change background with smooth gradient
          const gradient = createGradient(programColor);
          container.style.background = gradient;
          container.classList.add('has-content');
          
          // Show content panel
          contentPanel.style.opacity = '1';
          contentPanel.style.transform = 'translateX(0)';
          
          // Hide all content, show relevant content
          programContents.forEach(content => content.classList.remove('active'));
          const activeContent = document.querySelector(`.program-content[data-program="${programId}"]`);
          if (activeContent) {
            activeContent.classList.add('active');
          }
        });

        item.addEventListener('mouseleave', function() {
          // Reset background to white
          container.style.background = 'white';
          container.classList.remove('has-content');
          
          // Hide content panel
          contentPanel.style.opacity = '0';
          contentPanel.style.transform = 'translateX(2rem)';
          
          // Show default content
          programContents.forEach(content => content.classList.remove('active'));
          document.querySelector('.program-content[data-program="default"]').classList.add('active');
        });

        // Mobile click interactions
        item.addEventListener('click', function() {
          if (window.innerWidth < 1024) {
            const programId = this.dataset.program;
            const programColor = this.dataset.color;
            const activeContent = document.querySelector(`.program-content[data-program="${programId}"]`);
            
            if (activeContent) {
              // Apply the program color to mobile modal background
              mobileContent.style.background = `linear-gradient(135deg, ${programColor}dd 0%, ${programColor}cc 100%)`;
              mobileContentArea.innerHTML = activeContent.innerHTML;
              mobileContent.style.opacity = '1';
              mobileContent.style.pointerEvents = 'auto';
              document.body.style.overflow = 'hidden';
            }
          }
        });
      });

      // Mobile close button
      mobileClose.addEventListener('click', function() {
        mobileContent.style.opacity = '0';
        mobileContent.style.pointerEvents = 'none';
