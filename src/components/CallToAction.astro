<section class="bg-harmony">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <div class="px-6 py-12 sm:px-12 lg:py-16 lg:px-16 xl:flex xl:items-center">
        <div class="xl:w-0 xl:flex-1">
          <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
            Help Us Create a Better World Through Art
          </h2>
          <p class="mt-4 text-lg text-gray-500">
            Your support helps us bring transformative arts programming to communities, healthcare settings, schools, and beyond. Every donation makes a difference in someone's life through the power of creative expression.
          </p>
          <div class="mt-8 flex flex-col sm:flex-row gap-4">
            <div class="flex items-center">
              <svg class="h-6 w-6 text-harmony mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-sm text-gray-600">100% of funds go directly to programs</span>
            </div>
            <div class="flex items-center">
              <svg class="h-6 w-6 text-harmony mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-sm text-gray-600">Tax-deductible 501(c)(3) donation</span>
            </div>
          </div>
        </div>
        <div class="mt-8 sm:w-full sm:max-w-md xl:mt-0 xl:ml-8">
          <div class="sm:flex sm:flex-col sm:gap-4">
            <button
              type="button"
              id="cta-donate-button"
              class="btn-melody w-full flex items-center justify-center px-6 py-4 text-lg font-medium hover:shadow-lg transform hover:scale-105 transition-all duration-200 mb-4 sm:mb-0"
            >
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              Donate Today
            </button>
            <div class="flex gap-4 sm:gap-3">
              <a
                href="/about"
                class="flex-1 flex items-center justify-center px-4 py-3 border border-gray-300 rounded-full text-base font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200"
              >
                Learn More
              </a>
              <a
                href="/contact"
                class="flex-1 flex items-center justify-center px-4 py-3 border border-gray-300 rounded-full text-base font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200"
              >
                Get Involved
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Newsletter signup section -->
<section class="bg-gray-50">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-extrabold text-gray-900">Stay Connected</h2>
      <p class="mt-4 text-lg text-gray-500">
        Get updates on our latest programs, events, and impact stories delivered to your inbox.
      </p>
      <form class="mt-8 sm:flex sm:max-w-md sm:mx-auto" id="newsletter-form">
        <div class="min-w-0 flex-1">
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            type="email"
            required
            class="block w-full border-gray-300 rounded-l-full py-3 px-4 placeholder-gray-500 focus:ring-2 focus:ring-harmony focus:border-harmony sm:text-sm"
            placeholder="Enter your email"
          />
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-3 sm:flex-shrink-0">
          <button
            type="submit"
            class="w-full bg-harmony border border-transparent rounded-r-full py-3 px-4 flex items-center justify-center text-base font-medium text-white hover:bg-harmonydark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-harmony transition-colors duration-200 sm:w-auto"
          >
            Subscribe
          </button>
        </div>
      </form>
      <p class="mt-3 text-sm text-gray-500">
        We respect your privacy. Unsubscribe at any time.
      </p>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // CTA donate button functionality
    const ctaDonateButton = document.getElementById('cta-donate-button');
    if (ctaDonateButton) {
      ctaDonateButton.addEventListener('click', function(e) {
        e.preventDefault();
        
        try {
          if (window.Funraise) {
            window.Funraise.popup();
          } else {
            window.location.href = '/donate';
          }
        } catch (error) {
          console.warn('Funraise popup failed, redirecting to fallback', error);
          window.location.href = '/donate';
        }
      });
    }

    // Newsletter form
    const newsletterForm = document.getElementById('newsletter-form');
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const email = document.getElementById('email-address').value;
        
        // TODO: Integrate with email service (Mailchimp, ConvertKit, etc.)
        console.log('Newsletter signup:', email);
        
        // Show success message
        const submitButton = e.target.querySelector('button[type="submit"]');
        const originalText = submitButton.textContent;
        submitButton.textContent = 'Subscribed!';
        submitButton.disabled = true;
        submitButton.classList.remove('bg-harmony', 'hover:bg-harmonydark');
        submitButton.classList.add('bg-green-600');
        
        setTimeout(() => {
          submitButton.textContent = originalText;
          submitButton.disabled = false;
          submitButton.classList.add('bg-harmony', 'hover:bg-harmonydark');
          submitButton.classList.remove('bg-green-600');
          document.getElementById('email-address').value = '';
        }, 3000);
      });
    }
  });
</script>
