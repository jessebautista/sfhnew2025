---
import { fetchNews } from '../lib/supabase';

// Fetch latest 3 news items for the homepage
const newsItems = await fetchNews(3);

function formatDate(dateString: string) {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function stripHtml(html: string) {
  return html.replace(/<[^>]*>/g, '');
}

function truncateText(text: string, limit: number = 120) {
  const stripped = stripHtml(text);
  if (stripped.length <= limit) return stripped;
  return stripped.substring(0, limit) + '...';
}
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-12">
      <div>
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
          Latest News
        </h2>
        <p class="mt-4 text-xl text-gray-500">
          Stay updated with our latest programs, partnerships, and community impact.
        </p>
      </div>
      <div class="hidden sm:block">
        <a
          href="/news"
          class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-full text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200"
        >
          View All News
          <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>

    {newsItems.length > 0 ? (
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {newsItems.map((item) => (
          <article class="flex flex-col overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-200 bg-white">
            <div class="flex-shrink-0">
              <img
                class="h-48 w-full object-cover"
                src={item.news_image}
                alt={stripHtml(item.news_title)}
                loading="lazy"
              />
            </div>
            <div class="flex-1 bg-white p-6 flex flex-col justify-between">
              <div class="flex-1">
                <div class="flex items-center mb-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    News
                  </span>
                  <time class="ml-auto text-sm text-gray-500" datetime={item.news_date}>
                    {formatDate(item.news_date)}
                  </time>
                </div>
                <a href={`/news/${item.news_url}`} class="block mt-2 group">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-melody transition-colors duration-200">
                    <Fragment set:html={item.news_title} />
                  </h3>
                  <p class="mt-3 text-base text-gray-500 line-clamp-3">
                    {truncateText(item.news_title, 150)}
                  </p>
                </a>
              </div>
              <div class="mt-6">
                <a
                  href={`/news/${item.news_url}`}
                  class="inline-flex items-center text-melody hover:text-melodydark font-medium transition-colors duration-200"
                >
                  Read More
                  <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <!-- Fallback if no news items -->
      <div class="text-center py-12">
        <div class="max-w-md mx-auto">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No recent news</h3>
          <p class="mt-1 text-sm text-gray-500">Check back soon for updates on our programs and impact.</p>
        </div>
      </div>
    )}

    <!-- Mobile "View All News" button -->
    <div class="mt-8 text-center sm:hidden">
      <a
        href="/news"
        class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-full text-base font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200"
      >
        View All News
        <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>
