---
import { t, getLocalizedPath } from '../lib/i18n';

// Get translations from props (passed down from Header)
const { currentLang, translations } = Astro.props;
---

<nav class="flex items-center space-x-8" role="navigation" aria-label="Main navigation">
  <!-- About Dropdown -->
  <div class="relative group">
    <button
      type="button"
      class="flex items-center text-gray-700 hover:text-gray-900 font-medium transition-colors"
      aria-expanded="false"
      aria-haspopup="true"
    >
      {t("nav.about", translations)}
      <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </button>
    
    <div class="absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
      <div class="py-2">
        <a href={getLocalizedPath("/about#our-mission", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("nav.about_mission", translations) || "Our Mission"}
        </a>
        <a href={getLocalizedPath("/about#our-programming", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("nav.about_programming", translations) || "Our Programming"}
        </a>
        <a href={getLocalizedPath("/about#board", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("nav.about_board", translations) || "Board of Directors"}
        </a>
        <a href={getLocalizedPath("/about#leadership", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("nav.about_leadership", translations) || "Our Leadership"}
        </a>
        <a href={getLocalizedPath("/about#reports", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("nav.about_reports", translations) || "Annual Reports"}
        </a>
        <a href={getLocalizedPath("/press", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("nav.about_press", translations) || "Press"}
        </a>
      </div>
    </div>
  </div>

  <!-- Programs Dropdown -->
  <div class="relative group">
    <button
      type="button"
      class="flex items-center text-gray-700 hover:text-gray-900 font-medium transition-colors"
      aria-expanded="false"
      aria-haspopup="true"
    >
      {t("nav.programs", translations)}
      <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </button>
    
    <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
      <div class="py-2">
        <a href={getLocalizedPath("/pianos", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("programs.pianos_title", translations)}
        </a>
        <a href={getLocalizedPath("/education", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("programs.education_title", translations)}
        </a>
        <a href={getLocalizedPath("/health", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("programs.health_title", translations)}
        </a>
        <a href={getLocalizedPath("/diplomacy", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("programs.diplomacy_title", translations)}
        </a>
        <a href={getLocalizedPath("/workforce", currentLang)} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          {t("programs.workforce_title", translations)}
        </a>
        <div class="border-t border-gray-100 my-1"></div>
        <a href="/concept" class="block px-4 py-2 text-sm text-melody hover:bg-melody/5 hover:text-melodydark font-medium">
          ðŸš€ 3D Experience
        </a>
      </div>
    </div>
  </div>

  <!-- Explore -->
  <a href={getLocalizedPath("/explore", currentLang)} class="text-gray-700 hover:text-gray-900 font-medium transition-colors">
    Explore
  </a>

  <!-- News -->
  <a href={getLocalizedPath("/news", currentLang)} class="text-gray-700 hover:text-gray-900 font-medium transition-colors">
    {t("nav.news", translations)}
  </a>
</nav>
